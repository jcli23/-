<view class="big_box">
  <view class="top">
    <view class="left">推荐节目</view>
    <view class="right">更多节目</view>
  </view>
  <view class="box">
    <view wx:for="{{program}}" wx:key="index" class="result">
      <view wx:if="{{index<6}}">
        <image src="{{item.coverUrl}}" class="img"></image>
        <view class="name">{{item.name}}</view>
      </view>
    </view>
  </view>
</view>