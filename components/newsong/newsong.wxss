.bigbox{
  width: 95%;
  margin: 0 2.5% ;
}
.top {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.font{
  font-size: 30rpx;
  color: #999;
}
.color{
  color: black !important;
  font-size: 40rpx ;
  font-weight: 700 !important;
}
.top .left{
  display: flex;
  align-items: center;
}
.top .right{
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  text-align: center;
  border: 2rpx solid #f2f2f2;
  border-radius: 20rpx;
}
.box {
  display: flex;
  flex-wrap: wrap;
  height: 660rpx;
}

.result {
  width: 29%;
  margin: 20rpx 2%;
  position: relative;
}

.result .img {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}

.result .name {
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}