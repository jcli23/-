.top{
  width: 95%;
  padding: 30rpx 2.5%;
  display: flex;
  height: 80rpx;
  align-items: center;
}
.top .img{
  width: 60rpx;
  height: 60rpx;
}
.music_house{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
}
.box{
  width: 95%;
  padding: 0 2.5%;
  border-radius: 16rpx;
}
.banner{
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}
.banner .img{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.nav{
  height: 160rpx;
  width: 100%;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
}
.nav .box{
  flex: 1;
}
.nav .box .small{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  margin-left: 16rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  background: #f12c2c;
}
.nav .box .small image{
  width: 50rpx;
  height: 50rpx;
}
.nav .box .title{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}