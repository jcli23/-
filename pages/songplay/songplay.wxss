.background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}

.backgroundcover {
  width: 100%;
  height: 100%;
  filter: blur(99px);
}

.header {
  height: 80rpx;
  display: flex;
  padding: 50rpx 2.5% 160rpx 2.5%;
  width: 95%;
}

.header image {
  width: 60rpx;
  height: 60rpx;
}

.header .right {
  width: 60%;
  padding-left: 20rpx;
}

.header .right .font {
  font-size: 30rpx;
  color: white;
}

.header .right .copywriter {
  font-size: 20rpx;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.disk {
  width: 450rpx;
  height: 450rpx;
  display: flex;
  margin: 0 auto;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: black;
  animation: move 25s linear infinite;
}

.disk image {
  width: 70%;
  height: 70%;
  border-radius: 50%;
}

@keyframes move {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
.button{
  width: 100%;
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 280rpx;
}
.button view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button image{
  width: 50rpx;
  height: 50rpx;
}
.Playback_progress{
  width: 70%;
  height: 80rpx;
  bottom: 160rpx;
  left: 15%;
  position: absolute;
}
.Playback_progress .slider{
  margin-top: 38rpx;
}
.Playback_progress .currentTime{
  position: absolute;
  top:22rpx;
  left: -80rpx;
  font-size: 24rpx;
  color: white;
}
.Playback_progress .totalTime{
  top:22rpx;
  position: absolute;
  right: -80rpx;
  font-size: 24rpx;
  color: white;
}
.bottom{
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.bottom view{
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom view image{
  width: 50rpx;
  height: 50rpx; 
}
.bottom view .playstop{
  width: 100rpx;
  height: 100rpx; 
}