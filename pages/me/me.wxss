.greetings{
  margin-top: 300rpx;
  text-align: center;
  font-size: 28rpx;
}
.immediately{
  width: 200rpx;
  height: 60rpx;
  background: rgb(15, 177, 189);
  color: white;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 0 auto;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.top{
  height: 100rpx;
  width: 95%;
  padding: 50rpx 2.5%;
  display: flex;
  align-items: center;
}
.top image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 3%;
}
.top .center{
  height: 100rpx;
  width: 62%;
  margin-left: 5%;
}
.top .center .nickname{
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 20rpx;
}
.top .center .level{
  font-size: 24rpx;
  width: 100rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background: #f2f2f2;
  border-radius: 20rpx; 
  margin-top: 16rpx;
  margin-left: 20rpx;
}
.signin{
  font-size: 20rpx;
  width: 100rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background: #e4e3e3;
  border-radius: 20rpx;
  color: white;
}
.data{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
}
.data .box{
  width: 140rpx;
  height: 80rpx;
  text-align: center;
}
.data .box .font{
  font-size: 20rpx;
  color: #999;
}
.data .box image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
}
.outlogin{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: white;
  font-size: 26rpx;
  background: #FF6633;
  border-radius: 10rpx;
  margin-top: 100rpx;
  left: 50%;
  position: absolute;
  margin-left: -100rpx;
}